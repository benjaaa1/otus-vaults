{
    "name": "@otus-finance/monorepo",
    "version": "1.0.0",
    "keywords": [
      "ethereum",
      "react",
      "uniswap",
      "workspaces",
      "yarn"
    ],
    "config": {
      "src": "packages/hardhat/test/**/*.ts packages/hardhat/scripts/**/*.ts packages/hardhat/contracts/**/*.sol packages/hardhat/contracts/*.sol packages/hardhat/hardhat.config.ts"
    },
    "private": true,
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "packages/hardhat/contracts/**/*.sol": [
        "yarn prettier:sol"
      ],
      "*.{js,jsx}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.{html,css,less,ejs}": [
        "prettier --write",
        "git add"
      ]
    },
    "scripts": {
        "chain": "yarn workspace @otus-finance/hardhat chain",
        "start": "yarn workspace @otus-finance/react-app start",
        "deploy": "yarn workspace @otus-finance/hardhat deploy",
        "deploy-kovan": "yarn workspace @otus-finance/hardhat deploy --network kovan",
        "deploy-kovan-optimism": "yarn workspace @otus-finance/hardhat deploy --network kovanOptimism",
        "verify": "yarn workspace @otus-finance/hardhat verify",
        "surge": "yarn workspace @otus-finance/react-app surge",
        "build": "yarn workspace @otus-finance/react-app build --max-old-space-size=12288",
        "watch": "yarn workspace @otus-finance/hardhat watch",
        "lyraDeploy": "yarn workspace @otus-finance/hardhat lyraDeploy",
        "accounts": "yarn workspace @otus-finance/hardhat accounts",
        "balance": "yarn workspace @otus-finance/hardhat balance",
        "send": "yarn workspace @otus-finance/hardhat send",
        "generate": "yarn workspace @otus-finance/hardhat generate",
        "account": "yarn workspace @otus-finance/hardhat account",
        "compile": "yarn workspace @otus-finance/hardhat compile",
        "clean": "yarn workspace @otus-finance/hardhat clean",
        "test": "yarn workspace @otus-finance/hardhat test",
        "test-kovan": "yarn workspace @otus-finance/hardhat test-kovan",
        "lint": "yarn run lint:sol && yarn run lint:ts",
        "lint:fix": "yarn run lint:sol:fix && yarn run lint:ts:fix",
        "lint:sol": "solhint \\\"packages/hardhat/contracts/*.sol\\\" \\\"packages/hardha/contracts/periphery/*.sol\\\" \\\"packages/hardhat/contracts/libraries/*.sol\\\"",
        "lint:sol:fix": "yarn lint:sol --fix",
        "lint:ts": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore --ext .js,.ts .",
        "lint:ts:fix": "yarn lint:ts --fix",
        "prettier:sol": "prettier --config .prettierrc --write \"packages/hardhat/contracts/**/*.sol\"",
        "prettier:ts": "prettier --config .prettierrc --write \"**/*.{js,ts}\"",
        "prettier:json:md": "prettier --config .prettierrc --write \"**/*.{json,md}\"",
        "prettier": "yarn prettier:sol && yarn prettier:ts",
        "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,sol,ts}\""
    },
    "workspaces": {
      "packages": [
        "packages/*"
      ],
      "nohoist": [
        "**/@graphprotocol/graph-ts",
        "**/@graphprotocol/graph-ts/**",
        "**/hardhat",
        "**/hardhat/**",
        "**/hardhat-ts",
        "**/hardhat-ts/**"
      ]
    }
  }
  