{
    "name": "@scaffold-eth/monorepo",
    "version": "1.0.0",
    "keywords": [
      "ethereum",
      "react",
      "uniswap",
      "workspaces",
      "yarn"
    ],
    "config": {
      "src": "packages/hardhat/test/**/*.ts packages/hardhat/scripts/**/*.ts packages/hardhat/contracts/**/*.sol packages/hardhat/contracts/*.sol packages/hardhat/hardhat.config.ts"
    },
    "private": true,
    "scripts": {
        "chain": "yarn workspace @otus-finance/hardhat chain",
        "start": "yarn workspace @otus-finance/react-app start",
        "deploy": "yarn workspace @otus-finance/hardhat deploy",
        "verify": "yarn workspace @otus-finance/hardhat verify",
        "surge": "yarn workspace @otus-finance/react-app surge",
        "build": "yarn workspace @otus-finance/react-app build --max-old-space-size=12288",
        "watch": "yarn workspace @otus-finance/hardhat watch",
        "accounts": "yarn workspace @otus-finance/hardhat accounts",
        "balance": "yarn workspace @otus-finance/hardhat balance",
        "send": "yarn workspace @otus-finance/hardhat send",
        "generate": "yarn workspace @otus-finance/hardhat generate",
        "account": "yarn workspace @otus-finance/hardhat account",
        "compile": "yarn workspace @otus-finance/hardhat compile",
        "clean": "yarn workspace @otus-finance/hardhat clean",
        "test": "yarn workspace @otus-finance/hardhat test"
    },
    "workspaces": {
      "packages": [
        "packages/*"
      ],
      "nohoist": [
        "**/@graphprotocol/graph-ts",
        "**/@graphprotocol/graph-ts/**",
        "**/hardhat",
        "**/hardhat/**",
        "**/hardhat-ts",
        "**/hardhat-ts/**"
      ]
    }
  }
  